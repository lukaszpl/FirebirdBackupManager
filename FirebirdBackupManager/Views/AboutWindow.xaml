<Window x:Class="FirebirdBackupManager.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirebirdBackupManager.Views"
        mc:Ignorable="d"
        xmlns:p="clr-namespace:FirebirdBackupManager.Languages"
        Title="{x:Static p:Lang.about}" Height="150" Width="345" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Source="/Views/icon.ico"/>
        <TextBlock x:Name="appName_textBox" HorizontalAlignment="Left" Margin="100,10,0,0" TextWrapping="Wrap" Text="Firebird backup manager v1.0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="authorInfo_textBox" HorizontalAlignment="Left" Margin="100,37,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,58,0,0" TextWrapping="Wrap" Text="https://lsoroczynski.com/" VerticalAlignment="Top"/>
    </Grid>
</Window>
